    $SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
    $( "#starter" ).click(function() {
        $.post($SCRIPT_ROOT + 'start', {'code_game' : '{{username}}'}, function(data) {
        });
    });

</script>
{% endif %}
<script>
    $("#delete").click(function () {
        document.location.href="/lobby";
    });

</script>

</BODY>
</HTML>